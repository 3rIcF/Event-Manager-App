# Production Environment Variables
NODE_ENV=production
PORT=3001

# Database - PostgreSQL for Production
DATABASE_URL="postgresql://eventmanager:${DB_PASSWORD}@${DB_HOST}:5432/eventmanager_prod?schema=public"

# JWT Configuration - Use strong secrets in production
JWT_SECRET="${JWT_SECRET}"
JWT_EXPIRES_IN="24h"

# CORS Origins - Update for production domains
CORS_ORIGIN="https://yourdomain.com,https://api.yourdomain.com"

# Logging
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH="/app/uploads"

# Health Checks
HEALTH_CHECK_DATABASE=true

# Redis for Caching (Optional)
REDIS_URL="redis://${REDIS_HOST}:6379"

# Email Configuration (Optional)
SMTP_HOST="${SMTP_HOST}"
SMTP_PORT=587
SMTP_USER="${SMTP_USER}"
SMTP_PASSWORD="${SMTP_PASSWORD}"

# Monitoring
APP_NAME="event-manager-api"
APP_VERSION="1.0.0"